#:import Factory kivy.factory.Factory
<Screen1>:

	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			size_hint: (1, .2)

			Spinner:
				id: degree_field_spinner
				size_hint_y: .5
				pos_hint: {'center_y': .5}
				values: ['Computer Science', 'Software Engineering']
				text: 'Choose Degree Field'
				font_size: '18dp'

		GridLayout:
			cols: 2
			size_hint: (1, .8)

			BoxLayout:
				id: employment_layout
				orientation: 'vertical'
				canvas.before:
					Color:
						rgb: 1, 1, 1
					Line:
						rectangle: self.x+1, self.y+1, self.width-1, self.height-1


				BoxLayout:
					size_hint: (1, .2)

					Label:
						id: employment_title_label
						bold: True
						underline: True
						text: 'Employment Statistics'
						font_size: '30dp'

				BoxLayout:
					orientation: 'vertical'
					size_hint: (1, .8)

					Label:
						id: total_employed_label

					Label:
						id: total_unemployed_label

					Label:
						id: percent_employed_label

					Button:
						id: employment_graph_btn
						size_hint: (.5, .5)
						pos_hint: {'center_x': 0.5}
						text: 'Show Graph'
						on_release: root.plot_employment()

			BoxLayout:
				id: satisfaction_layout
				orientation: 'vertical'
				canvas.before:
					Color:
						rgb: 1, 1, 1
					Line:
						rectangle: self.x+1, self.y+1, self.width-1, self.height-1

				BoxLayout:
					size_hint: (1, .2)

					Label:
						id: satisfaction_title_label
						text: 'Job Satisfaction Index'
						bold: True
						underline: True
						font_size: '30dp'

				BoxLayout:
					orientation: 'vertical'
					size_hint: (1, .8)

					Label:
						id: satisfaction_label
						font_size: '18dp'

			BoxLayout:
				id: degree_types_layout
				orientation: 'vertical'
				canvas.before:
					Color:
						rgb: 1, 1, 1
					Line:
						rectangle: self.x+1, self.y+1, self.width-1, self.height-1

				BoxLayout:
					size_hint: (1, .2)

					Label:
						id: degree_types_title_label
						text: 'Degree Types'
						bold: True
						underline: True
						font_size: '30dp'

				BoxLayout:
					orientation: 'vertical'
					size_hint: (1, .8)

					Label:
						id: no_degree_label
						size_hint: (1, .1)

					Label:
						id: associates_label
						size_hint: (1, .1)

					Label:
						id: bachelors_label
						size_hint: (1, .1)

					Label:
						id: masters_label
						size_hint: (1, .1)

					Label:
						id: phd_label
						size_hint: (1, .1)

					Button:
						id: degree_types_graph_btn
						size_hint: (.5, .085)
						pos_hint: {'center_x': 0.5}
						text: 'Show Graph'
						on_release: root.plot_degree_types()

			BoxLayout:
				id: glassdoor_layout
				orientation: 'vertical'
				canvas.before:
					Color:
						rgb: 1, 1, 1
					Line:
						rectangle: self.x+1, self.y+1, self.width-1, self.height-1

				BoxLayout:
					size_hint: (1, .2)

					Label:
						id: glassdoor_title_label
						text: 'Job Availability'
						bold: True
						underline: True
						font_size: '30dp'

				BoxLayout:
					orientation: 'vertical'
					size_hint: (1, .8)

					Spinner:
						id: job_types_spinner
						size_hint: (.5, .2)
						pos_hint: {'center_x': 0.5}
						text: 'Choose Job Type'
						values: ['Web Dev', 'Software Engineer', 'Data Scientist']

					Label:
						id: place_holder
						size_hint: (1, .1)
						text: ''

					Button:
						id: go_btn
						size_hint: (.2, .2)
						pos_hint: {'center_x': 0.5}
						text: 'Go'
						on_release: root.process_glassdoor_api()

					Label:
						id: jobs_available_label

					Button:
						id: show_jobs_graph
						size_hint: (.5, .22)
						pos_hint: {'center_x': 0.5}
						text: 'Show Histogram of All Job Types'
						on_release: root.plot_available_jobs()
